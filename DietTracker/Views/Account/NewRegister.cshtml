@using DataAccessLayer.Enums;
@model RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HotDesk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Register.css" />
</head>
<body>
<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <p>Fill in the data below.</p>
                        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                        <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="col-md-12">
                            <input class="form-control" type="text" asp-for="Login" placeholder="Login" required>
                            <span style="color:red" asp-validation-for="Login" />
                        </div>
                        <div class="col-md-12">
                             <input class="form-control" type="password" asp-for="Password" placeholder="Password" required>
                             <span style="color:red" asp-validation-for="Password" />
                        </div>
                        <div class="col-md-12">
                            <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="ConfirmPassword" required>
                            <span style="color:red" asp-validation-for="ConfirmPassword" />
                        </div>

                        <div class="col-md-12">
                            <select class="form-select mt-3" asp-for="LifeStyle"
                                        asp-items="@new SelectList(Enum.GetNames(typeof(LifeStyle)))" required>
                                    <option value="" disabled selected>Select your LifeStyle</option>
                            </select>
                        </div>
                            <label for="start">BirthDate:</label>

                            <div class="col-md-12">
                            <input type="date" 
                                   asp-for="BirthDate">
                            </div>

                            <div class="col-md-12">
                                <input class="form-control" type="number" asp-for="Weight" placeholder="Weight" required>
                                <span style="color:red" asp-validation-for="Login" />
                            </div>
                            <div class="col-md-12">
                                <input class="form-control" type="number" asp-for="Height" placeholder="Height" required>
                                <span style="color:red" asp-validation-for="Login" />
                            </div>
                        <div class="col-md-12 mt-3">
                            <label class="mb-3 mr-1" for="gender">Gender: </label>

                                <input type="radio" class="btn-check" asp-for="Gender" value="Male" id="male" autocomplete="off" required>
                            <label class="btn btn-sm btn-outline-secondary" for="male">Male</label>

                                <input type="radio" class="btn-check" asp-for="Gender" value="Female" id="female" autocomplete="off" required>
                            <label class="btn btn-sm btn-outline-secondary" for="female">Female</label>
                        </div>
                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-primary">Register</button>
                        </div>
                            <div id="register-link" class="text-right">
                                <a asp-action="Login" asp-controller="Account" class="text-info">Back to login</a>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html> 